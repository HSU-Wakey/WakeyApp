<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wakey" parent="Base.Theme.Wakey" />

    <style name="Base.Theme.Wakey" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- 기본 색상 -->
        <item name="colorPrimary">#007AFF</item>          <!-- 주요 색상 -->
        <item name="colorPrimaryVariant">#116FD6</item>   <!-- 주요 색상의 어두운 버전 -->
        <item name="colorOnPrimary">#FFFFFF</item>        <!-- 주요 색상 위의 텍스트/아이콘 색상 -->

        <!-- 글꼴 설정 -->
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowBlurBehindEnabled">true</item>
        <item name="android:windowBlurBehindRadius">25dp</item>

        <!-- 글꼴 설정 -->
        <item name="android:fontFamily">@font/semibold</item>
        <item name="fontFamily">@font/semibold</item>
    </style>

    <style name="CustomMaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- 주요 색상 설정 -->
        <item name="colorPrimary">#007AFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#2196F3</item>

        <!-- 캘린더 헤더 색상 (상단 푸른 배경) -->
<!--    <item name="materialCalendarHeaderTitle">@style/CustomHeaderTitleStyle</item>-->
        <item name="materialCalendarHeaderToggleButton">@style/CustomHeaderToggleButtonStyle</item>
        <item name="materialCalendarHeaderLayout">@style/CustomHeaderLayoutStyle</item>

        <!-- 달력 전체 모양 -->
        <item name="shapeAppearanceOverlay">@style/CustomCalendarShapeOverlay</item>

        <!-- 글꼴 변경 -->
        <item name="android:fontFamily">@font/semibold</item>
        <item name="fontFamily">@font/semibold</item>
    </style>

    <!-- 캘린더 헤더 텍스트 스타일 -->
    <style name="CustomHeaderTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/black</item>
        <item name="fontFamily">@font/black</item>
    </style>

    <!-- 캘린더 버튼 스타일 -->
    <style name="CustomHeaderToggleButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <!-- 헤더 레이아웃 스타일 -->
    <style name="CustomHeaderLayoutStyle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">#007AFF</item>
    </style>

    <!-- 캘린더 전체 모양 정의 (코너 둥글기) -->
    <style name="CustomCalendarShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>