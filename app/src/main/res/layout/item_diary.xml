<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Diary thumbnail image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/diaryThumbnail"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp" />

        <!-- Diary info section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/diaryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="치앙마이에서의 일기"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="@font/bold" />

            <!-- Date range -->
            <TextView
                android:id="@+id/diaryDateRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024.07.16 ~ 07.23"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                app:fontFamily="@font/regular" />

            <!-- Heart rating container -->
            <LinearLayout
                android:id="@+id/heartContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!-- Heart icons will be added dynamically -->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>