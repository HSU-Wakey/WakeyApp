<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 이미지 -->
        <ImageView
            android:id="@+id/storyImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="스토리 이미지" />

        <!-- 내용 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 시간 및 위치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- 시간 -->
                <TextView
                    android:id="@+id/storyTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    tools:text="14:30" />

                <!-- 구분점 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:text="•" />

                <!-- 위치 -->
                <TextView
                    android:id="@+id/storyLocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    tools:text="서울시 강남구" />
            </LinearLayout>

            <!-- 캡션 (BLIP 모델 결과) -->
            <TextView
                android:id="@+id/storyCaptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#212121"
                android:lineSpacingExtra="4dp"
                tools:text="이 사진에는 사람들이 모여있고, 배경에는 건물이 보입니다." />

            <!-- 캡션 로딩 표시 -->
            <ProgressBar
                android:id="@+id/captionProgressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- 객체 인식 태그 -->
            <TextView
                android:id="@+id/storyTagsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#2196F3"
                tools:text="#사람 #건물 #야외" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>