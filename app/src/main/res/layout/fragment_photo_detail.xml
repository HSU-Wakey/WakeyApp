<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 상단 바 -->
    <View
        android:id="@+id/statusBarSpace"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 전체 구조: 상단 사진 + 하단 패널 -->
    <FrameLayout
        android:id="@+id/photoContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/statusBarSpace"
        app:layout_constraintBottom_toTopOf="@+id/infoPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 메인 사진 -->
        <ImageView
            android:id="@+id/photoDetailImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"/>

        <!-- 좌우 이동 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="이전 사진"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="다음 사진"/>
        </LinearLayout>
    </FrameLayout>

    <!-- 정보 패널 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/infoPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 날짜 및 시간 정보 -->

            <TextView
                android:id="@+id/activityChip"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/blue_tag"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:text="일상"
                android:textColor="#424242"
                android:fontFamily="@font/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/photoDetailTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.04.02 (수) 08:28"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- 활동 유형 태그 -->

            <!-- 위치 정보 -->
            <TextView
                android:id="@+id/photoDetailLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="장소"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <!-- 주소 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_place"
                    android:tint="#F44336"/>

                <TextView
                    android:id="@+id/photoDetailAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="위치: 대한민국 서울특별시 성북구 삼선동1가 302-12"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- 이미지 분석 결과 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="이미지 분석 결과"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <!-- 예측결과 -->
            <TextView
                android:id="@+id/photoDetailPredictionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:text="• laptop, laptop computer (14.11%)\n• modem (14.11%)\n• rule, ruler (14.11%)\n• binder, ring-binder (11.70%)\n• desk (9.70%)"
                android:textSize="15sp"
                android:textColor="#444444"/>

            <!-- 캡션 -->
            <TextView
                android:id="@+id/photoDetailCaptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="08:28에 아침 식사 중에 촬영한 사진"
                android:textSize="15sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_close"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="닫기"/>
</androidx.constraintlayout.widget.ConstraintLayout>